<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.swmaestro.recipe.ui.ReviewActivity"
    android:background="#ffffff">

    <ListView
        android:id="@+id/activity_review_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53000000"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/activity_review_commentET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:theme="@style/review"
            android:background="#ffffff"
            android:textSize="15sp"
            android:textColorHint="#000000"
            android:hint=" 댓글을 입력하세요.">
        </EditText>
        <Button
            android:id="@+id/activity_review_registerBt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity = "center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="#00000000"
            android:textSize="17sp"
            android:text="등록"/>
    </LinearLayout>

</RelativeLayout>
